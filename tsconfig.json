{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "allowJs": true,
    "paths": {
      "@shared/*": ["./src/components/@shared/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@context/*": ["./src/context/*"],
      "@images/*": ["./src/images/*"],
      "@utils/*": ["./src/utils/*"]
    }
    //"baseUrl": "./src"
  },
  "exclude": ["node_modules", "public", ".cache", "*.js"],
  "include": ["./src/**/*", "./tests/**/*", "./app.config.js"]
}
